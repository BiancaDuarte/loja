extends layout

block content
	.inicial
		h1.oi Tabela de produtos Lojas Taqi

		a.waves-effect.waves-light.btn(href='#modal1') 
			i.material-icons add_shopping_cart

		#modal1.modal
			.modal-content
				h4 Adicionar produto
				.row
					form.col.s12
						.row
							.input-field.col.s6
								select
									option(value='', disabled='', selected='') Escolha a categoria
									option(value='1' red)  Dormitório
									option(value='2') Sala de Estar
									option(value='3') Sala de Jantar
									option(value='4') Cozinha
									option(value='5') Escritório
								label Materialize Select
							.input-field.col.s6
								select
									option(value='', disabled='', selected='') Escolha o produto
									option(value='1' red) Roupeiro
									option(value='2') Cama de Solteiro
									option(value='3') Cama de Casal
									option(value='4') Criado Mudo
									option(value='5') Cômoda
									option(value='6') Sofá
									option(value='7') Estante
									option(value='8') Mesa de centro
									option(value='9') Pia
									option(value='10') Balcão
									option(value='11') Mesa
									option(value='12') Cadeira
									option(value='13') Escrivaninha
					.row
						form(action='#')
						.input-field.col.s3
							p
								input#test1(name='group1', type='radio')
								label(for='test1') Preto
						.input-field.col.s3
							p
								input#test2(name='group1', type='radio')
								label(for='test2') Branco
						.input-field.col.s3
							p
								input#test3(name='group1', type='radio')
								label(for='test3') Madeira
						.input-field.col.s3
							p
								input#test4(name='group1', type='radio')
								label(for='test4') Bege
				
				.row
					.input-field.col.s12
						select
							option(value='', disabled='', selected='') Escolha o material
							option(value='1' red) em madeira de reflorestamento
							option(value='2') mármore sintético

				.row
					form.col.s12
						.row
							.input-field.col.s6
								i.material-icons.prefix attach_money
								input#icon_prefix.validate(type='text')
								label(for='icon_prefix') Valor
							.input-field.col.s6
								i.material-icons.prefix info
								input#icon_telephone.validate(type='text')
								label(for='icon_telephone') Estoque


			.modal-footer
				a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Cancelar
				a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Concluído


		table.produtos.highlight.centered.bordered(border='1')
			thead
				tr
					th Produto
					th Nome
					th Categoria
					th Estoque
					th Material
					th Tamanho
					th Cor
					th Preço
					th Editar
					th Deletar
			tbody#tabela